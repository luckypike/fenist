.form
  = simple_form_for([:admin, @event]) do |f|
    = f.error_notification

    .form_inputs
      = f.input :title, as: :text
      = f.input :started_at, html5: true
      = f.input :ended_at, html5: true
      = f.input :desc
      = f.input :book
      = f.input :themes, as: :check_boxes, collection: Event::THEMES

      = f.association :partner
      = f.association :section
      = f.association :place

      = f.association :speakers

    .form_actions
      = f.button :submit
